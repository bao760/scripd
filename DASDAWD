			if obj:IsA("Part") and obj.Material == Enum.Material.Neon and obj.Transparency <= 0.3 then
				pcall(function() obj:Destroy() end)
			end
		end
		Rayfield:Notify({Title="ğŸ§½ ÄÃ£ xÃ³a Ä‘Æ°á»ng", Content="ÄÃ£ xÃ³a cÃ¡c pháº§n neon do script táº¡o.", Duration=2})
