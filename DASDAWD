local EventTab = Window:CreateTab("ğŸƒ Event", 4483362458)
EventTab:CreateSection("ğŸ‘» Sá»± kiá»‡n Graveyard")

-- ğŸ§  SmartMove: tá»± chá»n Pathfinding hoáº·c Tween
local PathfindingService = game:GetService("PathfindingService")
local TweenService = game:GetService("TweenService")

local function SmartMove(destination)
    local char = player.Character or player.CharacterAdded:Wait()
    local humanoid = char:WaitForChild("Humanoid")
    local hrp = char:WaitForChild("HumanoidRootPart")

    -- Táº¡o Ä‘Æ°á»ng path tháº­t
    local path = PathfindingService:CreatePath({
        AgentRadius = 2,
        AgentHeight = 5,
        AgentCanJump = true
    })

    path:ComputeAsync(hrp.Position, destination)

    -- Náº¿u cÃ³ Ä‘Æ°á»ng Ä‘i an toÃ n
    if path.Status == Enum.PathStatus.Success then
        local waypoints = path:GetWaypoints()
        Rayfield:Notify({
            Title = "ğŸš¶ SmartMove",
            Content = "Äang di chuyá»ƒn an toÃ n tá»›i má»¥c tiÃªu...",
            Duration = 3
        })
        for _, wp in ipairs(waypoints) do
            humanoid:MoveTo(wp.Position)
            humanoid.MoveToFinished:Wait()
        end
        Rayfield:Notify({
            Title = "âœ… ÄÃ£ Ä‘áº¿n nÆ¡i!",
            Content = string.format("X: %.2f, Y: %.2f, Z: %.2f", destination.X, destination.Y, destination.Z),
            Duration = 4
        })
    else
        -- Náº¿u khÃ´ng cÃ³ Ä‘Æ°á»ng -> fallback Tween
        Rayfield:Notify({
            Title = "âš ï¸ SmartMove",
            Content = "KhÃ´ng tÃ¬m Ä‘Æ°á»£c Ä‘Æ°á»ng an toÃ n, dÃ¹ng Tween fallback...",
            Duration = 3
        })
        local tween = TweenService:Create(
            hrp,
            TweenInfo.new(4, Enum.EasingStyle.Sine, Enum.EasingDirection.Out),
            {CFrame = CFrame.new(destination)}
        )
        tween:Play()
        tween.Completed:Wait()
        Rayfield:Notify({
            Title = "âœ… HoÃ n táº¥t Tween!",
            Content = "ÄÃ£ Ä‘áº¿n nÆ¡i báº±ng cháº¿ Ä‘á»™ dá»± phÃ²ng.",
            Duration = 3
        })
    end
end

