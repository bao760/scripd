coordBox = Tab1:CreateInput({
	Name = "ğŸ“Œ Tá»a Ä‘á»™ hiá»‡n táº¡i (click Ä‘á»ƒ copy)",
	PlaceholderText = "ChÆ°a cÃ³ tá»a Ä‘á»™...",
