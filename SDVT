local Tab3 = Window:CreateTab("ğŸŒ Server", 4483362458)

Tab3:CreateButton({
	Name = "ğŸ”’ Táº¡o Server VIP (Private)",
	Callback = function()
		Rayfield:Notify({
			Title = "Server VIP",
			Content = "ğŸ§© Äang táº¡o server riÃªng...",
			Duration = 3
		})
		task.spawn(function()
			local success, code = pcall(function()
				return TeleportService:ReserveServer(game.PlaceId)
			end)
			if code then
				setclipboard(code)
				Rayfield:Notify({
					Title = "Server VIP",
					Content = "âœ… Táº¡o thÃ nh cÃ´ng, code Ä‘Ã£ sao chÃ©p!",
					Duration = 3
				})
				task.wait(1)
				TeleportService:TeleportToPrivateServer(game.PlaceId, code, {Players.LocalPlayer})
			else
				Rayfield:Notify({
					Title = "Server VIP",
					Content = "âš ï¸ KhÃ´ng thá»ƒ táº¡o Server VIP!",
					Duration = 4
				})
			end
		end)
	end
})

Tab3:CreateButton({
	Name = "ğŸŒ Hop Server 0 Player",
	Callback = function()
		Rayfield:Notify({
			Title = "Server Hop",
			Content = "ğŸ” Äang tÃ¬m server Ã­t ngÆ°á»i...",
			Duration = 3
		})
		task.spawn(function()
			local Place = game.PlaceId
			local found
			local cursor = ""
			local lowest = math.huge
			repeat
				local url = ("https://games.roblox.com/v1/games/%d/servers/Public?sortOrder=Asc&limit=100%s")
					:format(Place, cursor ~= "" and "&cursor=" .. cursor or "")
				local ok, data = pcall(function()
					return HttpService:JSONDecode(game:HttpGet(url))
				end)
				if ok and data and data.data then
					for _, s in ipairs(data.data) do
						if s.playing < lowest and s.id ~= game.JobId then
							lowest = s.playing
							found = s.id
							if lowest < 2 then break end
						end
					end
					cursor = data.nextPageCursor or ""
				else
					cursor = nil
				end
				task.wait(0.2)
			until found or not cursor

			if found then
				Rayfield:Notify({
					Title = "Server Hop",
					Content = "âœ… Dá»‹ch chuyá»ƒn Ä‘áº¿n server trá»‘ng...",
					Duration = 3
				})
				TeleportService:TeleportToPlaceInstance(Place, found, Players.LocalPlayer)
			else
				Rayfield:Notify({
					Title = "Server Hop",
					Content = "âš ï¸ KhÃ´ng tÃ¬m tháº¥y server trá»‘ng!",
					Duration = 4
				})
			end
		end)
	end
})

-------------------------------------------------
-- â° TAB 4: CHECK TIME BLOOD (auto update má»—i giÃ¢y)
-------------------------------------------------
local Tab4 = Window:CreateTab("â° Check Time Blood", 4483362458)
local timeLabel = Tab4:CreateParagraph({
	Title = "ğŸ©¸ Time Blood",
	Content = "Äang táº£i..."
})

task.spawn(function()
	while task.wait(1) do
		pcall(function()
			local gui = Players.LocalPlayer:FindFirstChildOfClass("PlayerGui")
			if not gui then
				timeLabel:Set("âš ï¸ KhÃ´ng tÃ¬m tháº¥y PlayerGui!")
				return
			end

			local foundLabel
			for _, lbl in pairs(gui:GetDescendants()) do
				if lbl:IsA("TextLabel") and lbl.Visible and lbl.Parent and lbl.Parent:IsA("GuiObject") then
					local pos = lbl.Position
					if math.abs(pos.X.Scale - 0.498268247) < 0.002 and math.abs(pos.Y.Scale - 0.716611087) < 0.002 then
						foundLabel = lbl
						break
					end
				end
			end

			if foundLabel and foundLabel.Text and foundLabel.Text ~= "" then
				timeLabel:Set("ğŸ©¸ Time Blood Hiá»‡n Táº¡i: " .. tostring(foundLabel.Text))
			else
				timeLabel:Set("âš ï¸ KhÃ´ng tÃ¬m tháº¥y hoáº·c chÆ°a cÃ³ Time Blood!")
			end
		end)
	end
end)

