local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

local Window = Rayfield:CreateWindow({
    Title = "SDVT BF",
    SubTitle = "Sirius Menu Edition",
    KeySystem = false
})

local InfoTab = Window:CreateTab("Info üßæ")
local ServerTab = Window:CreateTab("Server üåê")

InfoTab:CreateLabel("Script: SDVT BF")
InfoTab:CreateParagraph({Title="Gi·ªõi thi·ªáu", Content="Hop server √≠t ng∆∞·ªùi nh·∫•t b·∫±ng executor Rayfield Sirius."})

local PLACE_ID = game.PlaceId

local function FindLowServer()
    local HttpService = game:GetService("HttpService")
    local cursor, lowest = nil, nil
    repeat
        local url = string.format("https://games.roblox.com/v1/games/%d/servers/Public?sortOrder=Asc&limit=100", PLACE_ID)
        if cursor then url = url .. "&cursor=" .. cursor end
        local ok, body = pcall(function() return game:HttpGet(url) end)
        if not ok then break end
        local data = HttpService:JSONDecode(body)
        for _, s in ipairs(data.data) do
            if s.playing < s.maxPlayers then
                if not lowest or s.playing < lowest.playing then
                    lowest = s
                end
            end
        end
        cursor = data.nextPageCursor
        task.wait(0.3)
    until not cursor
    return lowest
end

ServerTab:CreateButton({
    Title = "Hop Low Server",
    Description = "T·ª± ƒë·ªông chuy·ªÉn server √≠t ng∆∞·ªùi nh·∫•t",
    Callback = function()
        local srv = FindLowServer()
        if not srv then
            Rayfield:Notify("Kh√¥ng t√¨m ƒë∆∞·ª£c server ph√π h·ª£p!")
            return
        end
        Rayfield:Notify("ƒêang chuy·ªÉn t·ªõi server √≠t ng∆∞·ªùi... ("..srv.playing.." ng∆∞·ªùi)")
        game:GetService("TeleportService"):TeleportToPlaceInstance(PLACE_ID, srv.id, game.Players.LocalPlayer)
    end
})
