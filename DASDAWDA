local EventTab = Window:CreateTab("ğŸƒ Event", 4483362458)
EventTab:CreateSection("ğŸ‘» Sá»± kiá»‡n Graveyard")

-- HÃ m di chuyá»ƒn tween an toÃ n
local function SafeMoveTo(destination)
    local char = player.Character
    if not char or not char:FindFirstChild("HumanoidRootPart") then
        Rayfield:Notify({
            Title = "âš ï¸ Lá»—i",
            Content = "KhÃ´ng tÃ¬m tháº¥y nhÃ¢n váº­t!",
            Duration = 3
        })
        return
    end

    local TweenService = game:GetService("TweenService")
    local HRP = char.HumanoidRootPart

    local tween = TweenService:Create(
        HRP,
        TweenInfo.new(4, Enum.EasingStyle.Sine, Enum.EasingDirection.Out),
        {CFrame = CFrame.new(destination)}
    )

    tween:Play()
    Rayfield:Notify({
        Title = "ğŸ§­ Äang di chuyá»ƒn...",
        Content = "Äáº¿n vá»‹ trÃ­ má»¥c tiÃªu...",
        Duration = 4
    })

    tween.Completed:Connect(function()
        Rayfield:Notify({
            Title = "âœ… ÄÃ£ Ä‘áº¿n nÆ¡i!",
            Content = string.format("X: %.2f, Y: %.2f, Z: %.2f", destination.X, destination.Y, destination.Z),
            Duration = 4
        })
    end)
end

